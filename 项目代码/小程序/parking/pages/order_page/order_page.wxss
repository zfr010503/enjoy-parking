/* pages/order_page/order_page.wxss */
page{
    height: 100%;
    width: 100%;
}


.container{
    height: 100%;
    width: 100%;
    background: #f9f9f9;
}

van-tabs{
    position: fixed;
    top: 0px;
    height: auto;
    width: 100%;
}

.card_view{
    position: absolute;
    top: 80rpx;
    height: 100%;
    width: 100%;
}

.card{
    margin-left: 43rpx;
    margin-right: 43rpx;
    margin-top: 28rpx;
    margin-bottom: 28rpx;
    height: 380rpx;
    background: white;
    overflow: hidden;
    border-radius: 15rpx;
    box-shadow: 1rpx 1rpx 15rpx 15rpx rgba(165, 165, 165, 0.10);
}

.state_view{
    width: 100%;
    height: 75rpx;
    border-bottom: 3rpx solid #c9c9c9b7;
    /* background: violet; */
}

.icon{
    position: relative;
    top: 50%;
    left: 25rpx;
    transform: translate(0%, -50%);  /* 向左向上平移⾃⾝宽⾼的50%*/
    height: 40rpx;
    width: 40rpx;
}

.state_text{
    position: absolute;
    
    left: 80rpx;
    transform: translate(50%, -80%);  /* 向左向上平移⾃⾝宽⾼的50%*/
    font-size: 28rpx;
}

.order_time{
    position: absolute;
    left: 380rpx;
    transform: translate(0%, -80%);  /* 向左向上平移⾃⾝宽⾼的50%*/
    font-size: 24rpx;
    color: gray;
}

.detail_view{
    position: relative;
    left: 45rpx;
    top: 25rpx;
}

.free_text{
    position: absolute;
    font-size: 40rpx;
}
#rmb{
    position: absolute;
    top: 10rpx;
    font-size: 30rpx;
}
#rmb_number{
    position: absolute;
    left: 30rpx;
    top: 0rpx;
    font-size: 40rpx;
}
.free_text_lable{
    position: relative;
    top: 50rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    font-size: 26rpx;
    color: gray;
}
.free_text_lable_1{
    position: absolute;
    top: 90rpx;
    font-size: 26rpx;
    color: gray;
}
.free_text_lable_2{
    position: absolute;
    top: 136rpx;
    font-size: 26rpx;
    color: gray;
}
.free_text_detail_1{
    position: absolute;
    top: 90rpx;
    left: 90rpx;
    font-size: 26rpx;
    color: black;
}
.free_text_detail_2{
    position: absolute;
    top: 136rpx;
    left: 90rpx;
    font-size: 26rpx;
    color: black;
}

.seemore{
    position: absolute;
    top: 210rpx;
    height: 26rpx;
    font-size: 26rpx;
    color: gray;
}
.seemore_icon{
    position: absolute;
    left: 110rpx;
    bottom: -5rpx;
}

.btn{
    position: absolute;
    top: 160rpx;
    right: 250rpx;
    bottom: 0rpx;
    height: 50rpx;
}
button{
    height: 45rpx;
    width: 160rpx;
    overflow: hidden;
    border-radius: 25rpx;
    line-height: 42rpx;
    font-size: 26rpx;
}
#btn_1{
    position: relative;
    
    border: 3rpx inset black;
    background: white;
}
#btn_2{
    position: relative;
    left: 180rpx;
    top: 45rpx;
    background: #5270f2;
    color: white;
    box-shadow: 1rpx 1rpx 10rpx 10rpx rgba(101, 150, 255, 0.1);
}